{
    "source": {
        "include": [
            "./app.js",
            "./config/db.js",
            "./config/firebase.js",
            "./controllers/addStockData.js",
            "./controllers/getStockData.js",
            "./middleware/auth.js",
            "./middleware/multer.js",
            "./middleware/index.js",
            "./models/stock.model.js",
            "./models/user.model.js",
            "./routes/index.js",
            "./routes/protected/index.js",
            "./routes/protected/upload_file.js"
        ],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "encoding": "utf8",
        "destination": "../docs/"
    },
    "recurseDepth": 10
}